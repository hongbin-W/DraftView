<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_draft_close" />


        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_draft_next_unable" />


        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/iv_next"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_draft_clear" />

        <ImageView
            android:id="@+id/iv_prev"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/iv_clear"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_draft_prev_unable" />

    </RelativeLayout>

    <com.hongbin.library.DraftView
        android:id="@+id/draftView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>